= link_to t("views.places.controls.new"), new_place_path, class: "btn btn-default"
%table.table.table-striped
  %thead
    %tr
      %td= Place.human_attribute_name(:name)
      %td= Place.human_attribute_name(:address)
      %td= Place.human_attribute_name(:area)
      %td= Place.human_attribute_name(:opening_hours)
  %tbody
    - @places.each do |place|
      %tr
        %td= place.name
        %td= place.address
        %td= place.area
        %td= place.opening_hours
        %td= link_to t("views.places.controls.destroy"), place, method: :delete
